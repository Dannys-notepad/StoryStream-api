<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoryStream || Signup</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.fluid.classless.min.css" >
  </head>
  <body>
    <header>
      <h1><mark>StoryStream</mark></h1>
    </header>
    <main>
      <h2>Signup</h2>
      <form>
        <label>
          <input type="text" class="username" name="username" placeholder="Choose a Name">
        </label>
        <label>
          <input type="email" class="email" name="email" placeholder="Enter your Email">
        </label>
        <label>
          <input type="password" class="password" name="password" placeholder="Choose a unique password">
        </label>
        <button class="btn" type="submit">Create account</button>
      </form>
    </main>
    <script>
      const username = document.querySelector('.username')
      const email = document.querySelector('.email')
      const password = document.querySelector('.password')
      const submitBtn = document.querySelector('.btn')
      const form = document.querySelector('form')
      
      form.addEventListener('submit', (e) => {
        e.preventDefault()
      })
      submitBtn.addEventListener('click', () => {
        try{
          fetch('/process-form', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            name: username.value,
            mail: email.value,
            pass: password.value
            })
          })
          .then(response => response.json())
          .then(data => alert(data))
          .catch(error => console.error('Error:', error));
          
          /*
          fetch("/process-form", {
          method: "POST",
          body: JSON.stringify({
            name: username.value,
            mail: email.value,
            pass: password.value})
          }).then(response => response.json())
          .then(data => console.log(data))
          .catch(error => console.error('Error:', error))*/
        }catch(e){
          alert(e)
        }
      })
    </script>
  </body>
</html>
